#!/usr/bin/env groovy

pipeline {
	agent any
	tools { 
        maven 'maven-3.5.0' 
        jdk 'JDK18' 
    }
	stages {
		stage('Build') {
			steps{
				sh '''
				chmod 555 ci/Junit/installGW.sh
				ci/Junit/installGW.sh
				'''
			}
		}
		stage('Setup') {
			steps{
				echo 'This is where GW is setup'
			}
		}
		stage('Test') {
			steps{
				sh '''
				cd ci/Junit
				mvn test
				'''
			}
		}
	}
}
