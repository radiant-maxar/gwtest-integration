#!/usr/bin/env groovy

pipeline {
	environment {
		DOMAIN="unset"
		KEYNAME="unset"
		CLUSTER_ID="unset"
		REGION="unset"
	}
	agent any
	stages {
		stage('Create EMR') {
			steps{
				sh '''
				source ci/createcluster.sh
				'''
				script {
					env.DOMAIN=readFile('DOMAIN')
					env.KEYNAME=readFile('KEYNAME')
					env.CLUSTER_ID=readFile('CLUSTER_ID')
					env.REGION=readFile('REGION')
				}
			}
		}
		stage('Setup') {
			steps{
				sh '''
				ssh -o StrictHostKeyChecking=no -i ~/.ssh/${env.KEYNAME}.pem hadoop@${env.DOMAIN} < ci/startup.sh
				'''
			}
		}
		stage('Test') {
			steps{
				sh '''
				ssh -o StrictHostKeyChecking=no -i ~/.ssh/${env.KEYNAME}.pem hadoop@${env.DOMAIN} < ci/runtests.sh
				'''
			}
		}
	}
	post {
		always {
			sh '''
			aws emr terminate-clusters --cluster-ids ${env.CLUSTER_ID} --region ${env.REGION}
			'''
		}
	}
}
