#!/usr/bin/env groovy

pipeline {
	environment {
		DOMAIN="unset"
		KEYNAME="unset"
		CLUSTER_ID="unset"
		REGION="unset"
	}
	agent any
	stages {
		stage('Create EMR') {
			steps{
				sh '''
				source ci/createcluster.sh
				'''
				script {
					DOMAIN=readFile('DOMAIN')
					KEYNAME=readFile('KEYNAME')
					CLUSTER_ID=readFile('CLUSTER_ID')
					REGION=readFile('REGION')
				}
			}
		}
		stage('Setup') {
			steps{
				sh '''
				ssh -o StrictHostKeyChecking=no -i ~/.ssh/${KEYNAME}.pem hadoop@${DOMAIN} < ci/startup.sh
				'''
			}
		}
		stage('Test') {
			steps{
				sh '''
				ssh -o StrictHostKeyChecking=no -i ~/.ssh/${KEYNAME}.pem hadoop@${DOMAIN} < ci/runtests.sh
				'''
			}
		}
	}
	post {
		always {
			sh '''
			aws emr terminate-clusters --cluster-ids ${CLUSTER_ID} --region ${REGION}
			'''
		}
	}
}
